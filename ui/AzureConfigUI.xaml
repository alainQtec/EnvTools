<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Name="MainWindow"
    Title="EnvTools user's Azure Hsm"
	Height="450"
	Width="430"
    Style="{DynamicResource MaterialDesignWindow}" 
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanResize"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontSize="14"
    TextElement.FontFamily="Roboto"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="{DynamicResource MaterialDesignPaper}" >

	<Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.BlueGrey.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.DeepOrange.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid Name="SpinnerOverlayLayer" Panel.ZIndex="1000" Visibility="Collapsed" Background="Black" Opacity="0.5">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Height="20" Width="20" IsIndeterminate="True" >
                    <ProgressBar.LayoutTransform>
                    <ScaleTransform  ScaleX="4" ScaleY="4"/>
                </ProgressBar.LayoutTransform>
            </ProgressBar>
        </Grid>
        <Grid Name="DarkBgOverlayLayer" Panel.ZIndex="999" Visibility="Collapsed" Background="Black" Opacity="0.5"></Grid>
        <Grid>
        <materialDesign:Card Name="HsmConfigLayer" Panel.ZIndex="1000" Visibility="Hidden" Height="500" Width="480" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Azure Hsm vault Config" Grid.Row="0" Padding="20" FontWeight="Bold" Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
                                    <Button Name="Btn_HsmConfigLayer_Close" Width="25" Height="25" Content="x" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" ToolTip="Close">
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Grid>
                                                    <Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="{TemplateBinding BorderThickness}"/>
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Grid Grid.Row="1" Name="HsmConfigForm" Margin="20">
                                        <!-- <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions> -->
                                        
                                        
                                        <ComboBox Name="Az_Hsm_Form_ComboBox_Make" Grid.Column="0" Grid.Row="0" SelectedItem="{Binding txt}" Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                            materialDesign:HintAssist.Hint="Make" materialDesign:HintAssist.HelperText="* Required Field" Margin="5" />

                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate1" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" />
                                        
                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate2" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" Margin="5" />

                                        <TextBox Name="Az_Hsm_Form_TextBox_Note" Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="5" Style="{StaticResource MaterialDesignOutlinedTextBox}" MaxLength="50"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.Hint="Note" Text="{Binding txt}" 
                                            materialDesign:HintAssist.HelperText='Use only letters, numbers, spaces and limited number of special characters' Margin="5" />
                                            
                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate3" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" Margin="5" />
                                        
                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate4" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2" Margin="5" />

                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate5" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="5" Grid.ColumnSpan="2" Margin="5" />

                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate6" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="6" Grid.ColumnSpan="2" Margin="5" />

                                        <TextBox Name="Az_Hsm_Form_TextBox_Plate7" Grid.Column="0" Grid.Row="6" materialDesign:HintAssist.Hint="License Plate" Text="{Binding txt}"
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.HelperText="Numbers and Dashes" MaxLength="10"
                                            materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed" ToolTip="Valid formats: 99-999-99 or 999-99-999"
                                            Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:TextFieldAssist.SuffixText="*" Margin="5" />
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Strength:" 
                                            FontSize="16" Grid.Column="3" Grid.Row="7" Grid.ColumnSpan="2" Margin="5" />
                                        <!-- <ComboBox Name="Az_Hsm_Form_ComboBox_Model" Grid.Column="2" Grid.Row="0" SelectedItem="{Binding txt}" Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                            materialDesign:HintAssist.Hint="Model" materialDesign:HintAssist.HelperText="* Required Field" /> -->
                                        <!-- <ComboBox Name="Az_Hsm_Form_ComboBox_Year" Grid.Column="4" Grid.Row="0" SelectedItem="{Binding txt}" Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                            materialDesign:HintAssist.Hint="Year" materialDesign:HintAssist.HelperText="* Required Field" /> -->
                                        <!-- <materialDesign:RatingBar Name="Az_Hsm_Form_RatingBar_Rate" Orientation="Horizontal" VerticalAlignment="Center" Foreground="Gold"  Grid.Column="4" Grid.Row="6" 
                                            Value="{Binding Path=BlaBla, Mode=TwoWay}" Margin="5"/> -->
                                        <!-- <ComboBox Name="Az_Hsm_Form_ComboBox_Color" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" SelectedItem="{Binding txt}" Style="{StaticResource MaterialDesignOutlinedComboBox}" 
                                            materialDesign:HintAssist.Hint="Color" materialDesign:HintAssist.HelperText="* Required Field" /> -->
                                        <!-- <materialDesign:TimePicker Name="Az_Hsm_Form_TimePicker_Registered" Grid.Column="4" Grid.Row="2"  Style="{StaticResource MaterialDesignOutlinedTimePicker}" 
                                            materialDesign:HintAssist.Hint="Reg.Time" Text="{Binding txt}" Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" 
                                            materialDesign:HintAssist.HelperText="* Required Field" /> -->
                                        <!-- <DatePicker Name="Az_Hsm_Form_DatePicker_Registered" Grid.Column="4" Grid.Row="4" SelectedDate="{Binding txt}" Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
                                            Validation.ErrorTemplate="{StaticResource MaterialDesignValidationErrorTemplate}" materialDesign:HintAssist.Hint="Reg.Date" materialDesign:HintAssist.HelperText="* Required Field"/> -->
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,20,10,0">
                                        <Button Name="Az_Hsm_Form_Btn_Reset" Style="{StaticResource MaterialDesignFlatLightBgButton}" Content="Reset" Width="80" Margin="10" />
                                        <Button Name="Az_Hsm_Form_Btn_Cancel" Style="{StaticResource MaterialDesignFlatLightBgButton}" Content="Cancel" Width="80" Margin="10" />
                                        <Button Name="Az_Hsm_Form_Btn_Apply" Style="{StaticResource MaterialDesignFlatLightBgButton}" Content="Apply" Width="80" Margin="10" />
                                    </StackPanel>
                    </Grid>
            </materialDesign:Card>
        <Border CornerRadius="10" Background="White">
            <TabControl
                Style="{StaticResource MaterialDesignFilledTabControl}" TabStripPlacement="Left">
                    <TabItem Header="TAB 1">
                    <materialDesign:Card>
                    <Grid>
                        <Label Content="EnvTools Azure Hsm CONFIG" FontWeight="Bold" HorizontalAlignment="Center" Margin="5"/>
                        <StackPanel  VerticalAlignment="Center">
                            <Button Name="Btn_Popup_AZ_Inputs" Content="Add your Hsm cfg" Width="150" ToolTip="Input your azure Configs" Margin="5"/>
                            <Button Name="Btn_StartConfigJobs" Content="Start AZ config" Width="150" ToolTip="Start Azure Config" Margin="5"/>
                        </StackPanel>
                    </Grid>
                    </materialDesign:Card>
                    </TabItem>
                    <TabItem
                    Header="TAB 2">
                    <TextBlock
                        Margin="8"
                        Text="Left placement2" />
                    </TabItem>
                    <TabItem
                    Header="TAB 3 Diff Width">
                    <TextBlock
                        Margin="8"
                        Text="Tab 3 with different width" />
                    </TabItem>
                    <TabItem
                    Header="TAB 4 Looong">
                    <TextBlock
                        Margin="8"
                        Text="Tab 4 with long width" />
                    </TabItem>
                    <TabItem
                    Header="TABB 5">
                    <TextBlock
                        Margin="8"
                        Text="Left placement tabb 5" />
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
        <Grid>
            <TextBox Name="TextBox_Output" Foreground="white" Background="Black" Style="{StaticResource MaterialDesignOutlinedTextBox}" VerticalAlignment="Bottom" Height="100" Width="400" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
        </Grid>
    </Grid>
</Window>